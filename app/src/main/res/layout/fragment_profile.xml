<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="#ffffff">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profil_header_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/profil_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informations_container"
        android:orientation="vertical"
        android:layout_below="@+id/profil_header_image"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="28dp"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/profil_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Rafał Rutyna"/>

        <TextView
            android:id="@+id/profil_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#FF707070"
            android:text="rafalrutyna00@gmail.com"/>

        <TextView
            android:id="@+id/profil_user_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Aktywny od: 23.05.2016"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stats_buttons"
        android:layout_below="@+id/informations_container"
        android:orientation="horizontal"

        android:weightSum="2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gymButton"
            android:text="Gym"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/bright_foreground_material_dark"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio"
            android:id="@+id/cardioButton"
            android:layout_weight="1"
            android:background="@color/primary_dark_material_light"
            android:textColor="@color/bright_foreground_material_dark"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/stats_buttons"
        android:background="@color/colorPrimary">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/stats_container">

               <TableLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="12dp"
                   android:layout_marginLeft="3dp"
                   android:layout_marginRight="3dp"
                   android:stretchColumns="1"
                   android:id="@+id/profil_gym_table"
                   android:visibility="visible">

                   <TableRow
                       android:layout_marginTop="3dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Ostatni trening:"
                           android:padding="3dp"
                           android:textColor="@color/bright_foreground_material_dark"/>
                       <TextView
                           android:text="5 km"
                           android:padding="3dp"
                           android:layout_gravity="right"
                           android:textColor="@color/bright_foreground_material_dark"/>
                   </TableRow>
0
                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Najdłuższy trening:"
                           android:padding="3dp"
                           android:textColor="@color/bright_foreground_material_dark"/>
                       <TextView
                           android:text="140 min"
                           android:padding="3dp"
                           android:layout_gravity="right"
                           android:textColor="@color/bright_foreground_material_dark"/>
                   </TableRow>

                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Średni czas treningu:"
                           android:padding="3dp"
                           android:textColor="@color/bright_foreground_material_dark"/>
                       <TextView
                           android:text="110 min"
                           android:padding="3dp"
                           android:layout_gravity="right"
                           android:textColor="@color/bright_foreground_material_dark"/>
                   </TableRow>


               </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profil_cardio_table"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="invisible">

                    <TableRow
                        android:layout_marginTop="3dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Ostatni bieg:"
                            android:padding="3dp"
                            android:textColor="@color/bright_foreground_material_dark"/>
                        <TextView
                            android:text="5 km"
                            android:padding="3dp"
                            android:layout_gravity="right"
                            android:textColor="@color/bright_foreground_material_dark"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Najdłuższy bieg:"
                            android:padding="3dp"
                            android:textColor="@color/bright_foreground_material_dark"/>
                        <TextView
                            android:text="140 min"
                            android:padding="3dp"
                            android:layout_gravity="right"
                            android:textColor="@color/bright_foreground_material_dark"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Średni czas biegu:"
                            android:padding="3dp"
                            android:textColor="@color/bright_foreground_material_dark"/>
                        <TextView
                            android:text="110 min"
                            android:padding="3dp"
                            android:layout_gravity="right"
                            android:textColor="@color/bright_foreground_material_dark"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Średnia prędkość:"
                            android:padding="3dp"
                            android:textColor="@color/bright_foreground_material_dark"/>
                        <TextView
                            android:text="10 km/h"
                            android:padding="3dp"
                            android:layout_gravity="right"
                            android:textColor="@color/bright_foreground_material_dark"/>
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </LinearLayout>
        
    </ScrollView>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/maxwell"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/informations_container"
        android:layout_marginBottom="-55dp"
        />

</RelativeLayout>
</ScrollView>