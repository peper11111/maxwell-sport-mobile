<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profil_header_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/profil_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informations_container"
        android:orientation="vertical"
        android:layout_below="@+id/profil_header_image"
        android:gravity="center"
        android:paddingTop="32dp"
        android:paddingBottom="28dp">

        <TextView
            android:id="@+id/profil_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Rafał Rutyna"/>

        <TextView
            android:id="@+id/profil_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#FF707070"
            android:text="rafalrutyna00@gmail.com"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stats_buttons"
        android:layout_below="@+id/informations_container"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="2"
        android:background="#bebebe">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gymButton"
            android:text="Gym"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardio"
            android:id="@+id/cardioButton"
            android:layout_weight="1"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@+id/stats_buttons"
        android:background="#bebebe"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/stats_container">

               <TableLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="12dp"
                   android:stretchColumns="1"
                   android:id="@+id/profil_gym_table">

                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Ostatni trening:"
                           android:padding="3dp"/>
                       <TextView
                           android:text="5 km"
                           android:padding="3dp"
                           android:layout_gravity="right"/>
                   </TableRow>

                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Najdłuższy trening:"
                           android:padding="3dp"/>
                       <TextView
                           android:text="140 min"
                           android:padding="3dp"
                           android:layout_gravity="right"/>
                   </TableRow>

                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Średni czas treningu:"
                           android:padding="3dp"/>
                       <TextView
                           android:text="110 min"
                           android:padding="3dp"
                           android:layout_gravity="right"/>
                   </TableRow>

                   <TableRow
                       android:layout_marginTop="2dp">
                       <TextView
                           android:layout_column="1"
                           android:text="Aktywny od:"
                           android:padding="3dp"/>
                       <TextView
                           android:text="21.05.2016 r."
                           android:padding="3dp"
                           android:layout_gravity="right"/>
                   </TableRow>

               </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profil_cardio_table"
                    android:layout_marginTop="12dp"
                    android:stretchColumns="1">

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Ostatni bieg:"
                            android:padding="3dp"/>
                        <TextView
                            android:text="5 km"
                            android:padding="3dp"
                            android:layout_gravity="right"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Najdłuższy bieg:"
                            android:padding="3dp"/>
                        <TextView
                            android:text="140 min"
                            android:padding="3dp"
                            android:layout_gravity="right"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Średni czas biegu:"
                            android:padding="3dp"/>
                        <TextView
                            android:text="110 min"
                            android:padding="3dp"
                            android:layout_gravity="right"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Średnia prędkość:"
                            android:padding="3dp"/>
                        <TextView
                            android:text="10 km/h"
                            android:padding="3dp"
                            android:layout_gravity="right"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="2dp">
                        <TextView
                            android:layout_column="1"
                            android:text="Aktywny od:"
                            android:padding="3dp"/>
                        <TextView
                            android:text="21.05.2016 r."
                            android:padding="3dp"
                            android:layout_gravity="right"/>
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </LinearLayout>
        
    </ScrollView>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/maxwell"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/informations_container"
        android:layout_marginBottom="-16dp"/>

</RelativeLayout>